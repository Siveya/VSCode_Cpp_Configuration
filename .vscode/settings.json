{
    // 使用 .clang-format 格式化代码, 需要 C/C++ 扩展。
    "C_Cpp.clang_format_style": "file",
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        // 保存自动格式化
        "editor.formatOnSave": true
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true
    },
    // 4 个空格缩进
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.encoding": "utf8",
}